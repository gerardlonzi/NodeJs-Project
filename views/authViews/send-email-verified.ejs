<%- include('../partiel/head',{title:"Send Email verification"}) %>

</head>

<body>
    <main id="content-page">
    <section class="login">
        <div class="img-bl">
             <img src="/images/forget.avif" alt="">
        </div>
        <div class="form">
            
                <% if (typeof message !=='undefined' && message.success ) { %>
                    <div class="new-sucess disapied">
                        <p >
                        <i class="bi bi-check-circle"></i>
                        <%= message.success %>
                        </p>
                        <i class="bi bi-x"></i>
                    </div>
                        <% } %>
                        <% if (typeof message !=='undefined' && message.error ) { %>
                            <div class="new-error disapied">
                                <p>
                                    <i class="bi bi-exclamation-triangle"></i>
                                <%= message.error %>
                                </p>
                                <i class="bi bi-x"></i>
                            </div>
                                <% } %>
            <div class="send-mail">
                <h1>un email de vérification vous sera envoyer á <span>
                    <%= typeof data.email !=='undefined' && data.email !== null ? data.email: "" %>
                </span></h1>
                <form action="/send-email-verified" class="form_submit" method="post">
                   <input type="email" placeholder="email" name="" id=""
                    value="<%= typeof data.email !=='undefined' && data.email !== null ? data.email: "" %>" disabled>
                    <button class="submit" type="submit" >envoyer<img class="loader-img" src="/images/spin.png" alt="spinner"></button>
            </form>
            </div>
        </div>
    </section>
    </main>
    <%- include('../partiel/pageLoader') %>
    <%- include('../partiel/news') %>
    <%- include('../partiel/buttonLoader') %>


</body>

</html>