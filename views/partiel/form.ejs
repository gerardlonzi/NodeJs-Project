<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
</head>
<body>
   <form action="" method="post">
        <p class="ins_conn">Se connecter</p>
        <div>
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" value="<%=typeof email !=="undefined" ? email : ""  %>">
            <span>
                <% if (typeof error_msg_field_email !== 'undefined' && error_msg_field_email.length > 0) { %>
                    <%= error_msg_field_email %>
                <% } %>
            </span>
        </div>
        <div>
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" name="password" value="<%= typeof password !== 'undefined'? password : '' %>" />
            <span>
                <% if (typeof password_length !== 'undefined') { %>
                    <%= password_length %>
                <% } %>
                <% if (typeof error_msg_field_password !== 'undefined') { %>
                    <%= error_msg_field_password %>
                <% } %>
            </span>
        </div>
        <div>
            <input type="submit" value="Se connecter">
        </div>
        <p>
            <a class="btn_cons_reg" href="register">S'inscrire</a>
        </p>
   </form> 
   <script>
    const ins_conn = document.querySelector(".ins_conn");
    const btn_cons_reg = document.querySelector(".btn_cons_reg");

    if (location.pathname == "/register") {
        ins_conn.textContent = "S'inscrire";
        btn_cons_reg.textContent = "Se connecter";
        btn_cons_reg.setAttribute("href", "login");
    }
    console.log(location.pathname);
   </script>
</body>
</html>
