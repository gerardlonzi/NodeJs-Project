            </main>
            

            <%- include('partiel/buttonLoader') %>

            <%- include('partiel/loader') %>
            <%- include('partiel/pageLoader') %>
            <script>
                   document.addEventListener('DOMContentLoaded', function () {
        var splide = new Splide('#my-carousel', {
            type       : 'loop',  
            gap        : '2rem',   
            autoplay   : true,       
            pauseOnHover: true,       
            drag       : 'free',      
            perPage    : 3,
            breakpoints: {
                850: {
                    perPage: 2,    
                },
                600: {
                    perPage: 1,    
                },
            },
        });

        splide.mount();
    });
            </script>
    </body>

    </html>